<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App_sample" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_grey</item>
        <item name="colorSecondaryVariant">@color/sand</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/ProductSansTV</item>
        <item name="editTextStyle">@style/ProductSansET</item>

        <item name="android:textColorSecondary">@color/blue</item> //toolbar icon color android

    </style>

    
    <style name="ProductSansTV" parent="android:Widget.TextView">
        <item name="fontFamily">@font/product_sans</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProductSansET" parent="android:Widget.EditText">
        <item name="fontFamily">@font/product_sans</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>