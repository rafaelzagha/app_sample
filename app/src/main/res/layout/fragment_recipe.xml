<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    tools:context=".ui.recipe.RecipeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:backgroundTint="@color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/faded_black"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:scrimAnimationDuration="100"
            app:statusBarScrim="@android:color/transparent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/backdrop"
                android:layout_width="match_parent"
                android:layout_height="275dp"
                app:riv_corner_radius_bottom_right="25dp"
                app:riv_corner_radius_bottom_left="25dp"
                android:scaleType="centerCrop"
                android:src="@drawable/example_picture"
                app:layout_collapseMode="parallax"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/shape_collapse"
                app:layout_collapseMode="pin"
                app:menu="@menu/recipe_menu"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vitae faucibus nisl, sit amet aliquam libero. Vestibulum venenatis ullamcorper lacus et aliquet. Duis tristique, mauris et tincidunt varius, dui diam feugiat lacus, vel convallis urna purus at nunc. Proin condimentum placerat viverra. Integer nec est sodales lorem porttitor congue. Aenean scelerisque sem blandit dui posuere gravida. Pellentesque in fringilla nisi, vitae bibendum mi. Fusce velit nisl, feugiat sed sollicitudin sit amet, tempus at ante. Nunc facilisis, odio nec consectetur elementum, turpis enim fringilla libero, a scelerisque nunc nulla eget est. Ut eu augue sapien. Donec rhoncus euismod consectetur. Praesent in tempor enim. Phasellus finibus, sem sit amet porta porttitor, sem diam volutpat augue, non interdum massa ante sit amet dolor. Nunc pharetra arcu condimentum augue rhoncus, et imperdiet nulla porta. Phasellus tristique mauris arcu."
            android:textSize="100dp" />

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>