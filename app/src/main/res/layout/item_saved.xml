<?xml version="1.0" encoding="utf-8"?>
<com.aitsuki.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:designer="@string/classic_designer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"
            app:cardCornerRadius="15dp"
            app:cardElevation="@dimen/elevation">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="20">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/example_picture" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="11.7">

                    <TextView
                        android:id="@+id/recipe_name"
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Recipe Name even when its long"
                        android:textFontWeight="600"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/meal_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/recipe_name"
                        android:layout_alignStart="@id/recipe_name"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_round"
                        android:backgroundTint="@color/green"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="Breakfast"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/meal_type"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="1dp"
                        android:layout_toEndOf="@id/meal_type"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:text="20 min"
                        android:textColor="@color/another_grey"
                        android:textSize="15sp"
                        app:drawableLeftCompat="@drawable/ic_time"
                        app:drawableTint="@color/another_grey" />

                    <TextView
                        android:id="@+id/servings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/meal_type"
                        android:layout_alignStart="@id/recipe_name"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:text="2 servings"
                        android:textColor="#A6A4A5"
                        android:textSize="15sp"
                        app:drawableLeftCompat="@drawable/ic_dish"
                        app:drawableTint="#A6A4A5" />

                    <ImageView
                        android:id="@+id/go"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/ic_arrow"
                        app:tint="@color/blue" />

                </RelativeLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginVertical="5dp">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/sky">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_add"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groceries"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/red">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_delete"
                android:layout_marginHorizontal="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"/>


        </LinearLayout>
    </LinearLayout>
    

</com.aitsuki.swipe.SwipeLayout>
