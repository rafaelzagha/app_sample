<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".HomeFragment"
    tools:ignore="HardcodedText,ContentDescription,Autofill,UnusedAttribute">


    <TextView
        android:id="@+id/user_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/product_sans"
        android:text="Hi, username"
        android:textColor="@color/dark_grey"
        android:textFontWeight="300"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="@dimen/elevation"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/almost_white">

        <ImageView
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_filter"
            app:tint="@color/blue"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_welcome"
        android:layout_alignStart="@id/user_welcome"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/product_sans"
        android:gravity="center_horizontal"
        android:text="What are you craving?"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="35sp" />


    <com.yuyakaido.android.cardstackview.CardStackView
        android:id="@+id/csv"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/title"
        android:layout_marginTop="30dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/csv"
        app:cardCornerRadius="100dp"
        app:cardElevation="@dimen/elevation"
        android:layout_toEndOf="@id/cancel"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:padding="8dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/almost_white"
            android:src="@drawable/ic_add"
            app:tint="@color/blue"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/csv"
        app:cardCornerRadius="100dp"
        app:cardElevation="@dimen/elevation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">

        <ImageView
            android:padding="12dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/almost_white"
            android:src="@drawable/ic_clear"
            app:tint="@color/medium_grey"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/csv"
        app:cardCornerRadius="100dp"
        app:cardElevation="@dimen/elevation"
        android:layout_toStartOf="@id/cancel"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:padding="13dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/almost_white"
            android:src="@drawable/ic_favorite_filled"
            app:tint="@color/pink"/>

    </androidx.cardview.widget.CardView>



</RelativeLayout>